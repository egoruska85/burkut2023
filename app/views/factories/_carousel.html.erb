<div id="carouselExampleCaptions" class="carousel slide">
  <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <% @factorycarouuseles.each do |i| %>

      <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= @a + i.id %>" aria-label="Slide <%= @a + i.id + 1 %>"></button>

    <% end %>

  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <!--<img src="/images/burkut.jpg" class="d-block w-100" alt="...">-->
      <%= image_tag(@factorycarousel_active.picture, class:"d-block w-100", alt:"...") %>
      <div class="carousel-caption d-none d-md-block">
        <h5>
          <%= @factorycarousel_active.title_ru if params[:locale] != true and params[:locale] != 'en' and params[:locale] != 'tm' and params[:locale] != 'ru' %>
          <%= @factorycarousel_active.title_ru if params[:locale] == 'ru' %>
          <%= @factorycarousel_active.title_en if params[:locale] == 'en' %>
          <%= @factorycarousel_active.title_tm if params[:locale] == 'tm' %>
        </h5>
        <p>
          <%= @factorycarousel_active.desc_ru if params[:locale] != true and params[:locale] != 'en' and params[:locale] != 'tm' and params[:locale] != 'ru' %>
          <%= @factorycarousel_active.desc_ru if params[:locale] == 'ru' %>
          <%= @factorycarousel_active.desc_en if params[:locale] == 'en' %>
          <%= @factorycarousel_active.desc_tm if params[:locale] == 'tm' %>
        </p>
      </div>
    </div>
    <% @factorycarouuseles.each do |carousel| %>
      <div class="carousel-item">
        <img src="..." class="d-block w-100" alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h5>
            <%= carousel.title_ru if params[:locale] != true and params[:locale] != 'en' and params[:locale] != 'tm' and params[:locale] != 'ru' %>
            <%= carousel_active.title_ru if params[:locale] == 'ru' %>
            <%= carousel_active.title_en if params[:locale] == 'en' %>
            <%= carousel_active.title_tm if params[:locale] == 'tm' %>
          </h5>
          <p>
            <%= carousel_active.desc_ru if params[:locale] != true and params[:locale] != 'en' and params[:locale] != 'tm' and params[:locale] != 'ru' %>
            <%= carousel_active.desc_ru if params[:locale] == 'ru' %>
            <%= carousel_active.desc_en if params[:locale] == 'en' %>
            <%= carousel_active.desc_tm if params[:locale] == 'tm' %>
          </p>
        </div>
      </div>
    <% end %>

  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
