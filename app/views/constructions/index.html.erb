<section class="ftco-section ftco-no-pt ftco-no-pb" id="about">
  <div class="container">
    <div class="row d-flex no-gutters">
      <div class="col-md-6 d-flex">
        <div class="img img-video d-flex align-self-stretch align-items-center justify-content-center justify-content-md-end" style="background-image:url(<%= rails_blob_url(@construction_about.picture)%>);">
          <a href="/video/ekskovator.mp4" class="icon-video popup-vimeo d-flex justify-content-center align-items-center">
            <span class="icon-play"></span>
          </a>
        </div>
      </div>
      <div class="col-md-6 pl-md-5">
        <div class="row justify-content-start py-5">
          <div class="col-md-12 heading-section ftco-animate pl-md-4 py-md-4">
            <span class="subheading" style="font-family: bankgothic;">BURKUT <%= t('navbar.construction')%></span>
            <h2 class="mb-4"><%= @construction_motto.upcase %></h2>

            <div class="tabulation-2 mt-4">
              <ul class="nav nav-pills nav-fill d-md-flex d-block">
                <li class="nav-item mb-md-0 mb-2">
                  <a class="nav-link active py-2" data-toggle="tab" href="#home1"><%= t('about.first') %></a>
                </li>
                <li class="nav-item px-lg-2 mb-md-0 mb-2">
                  <a class="nav-link py-2" data-toggle="tab" href="#home2"><%= t('about.our_vision') %></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link py-2 mb-md-0 mb-2" data-toggle="tab" href="#home3"><%= t('about.our_value') %></a>
                </li>
              </ul>
              <div class="tab-content bg-light rounded mt-2">
                <div class="tab-pane container p-0 active" id="home1" style="height: 290px;">
                  <p><%= @construction_about_about %></p>
                </div>
                <div class="tab-pane container p-0 fade" id="home2" style="height: 290px;">
                  <p><%= @construction_about_vision %></p>
                </div>
                <div class="tab-pane container p-0 fade" id="home3" style="height: 290px;">
                  <p>
                    <%= @construction_about_values.length <= 400 ? @construction_about_values : @construction_about_values[0..400] ... %>
                  </p>
                  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <%= t('about.button_more') %>
                  </button>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

