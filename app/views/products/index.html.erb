<head>
  <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900&display=swap" rel="stylesheet">

  <link rel="stylesheet" href="/css/ionicons.min.css">

  <link rel="stylesheet" href="/css/flaticon.css">
  <link rel="stylesheet" href="/css/icomoon.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


  <link rel="stylesheet" href="/products/products.css">
</head>
<body>
  <%= render '/products/navbar/navbar' %>
  <%= render 'lang/lang' %>

  <div class="post-wrap">
    <% @products.each do |product| %>
    <div class="post-item">
    <div class="post-item-wrap">
    <a href="" class="post-link">
      <% if product.picture.attached? %>
        <%= image_tag(product.picture) %>
      <% else %>
        <%= image_tag(@nophoto.no_picture) %>
      <% end %>

    <div class="post-info">
    <div class="post-meta">
    <div class="post-date">Декабрь 18, 2018</div>
    <div class="post-cat">Красивые вещи</div>
    </div>
    <h3 class="post-title">Уютные вещи для вашего дома</h3>
    </div>
    </a>
    </div>
    </div>
    <% end %>




</div>
</body>
